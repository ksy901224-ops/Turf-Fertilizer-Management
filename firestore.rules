rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Check if the requesting user is an admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // Check if the user account is approved
    function isApproved(userId) {
      return exists(/databases/$(database)/documents/users/$(userId)) &&
             get(/databases/$(database)/documents/users/$(userId)).data.isApproved == true;
    }

    // Users Collection
    match /users/{userId} {
      // Allow reading: User can read own profile; Admin can read all
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      // Allow creation: User can create own profile, but strict initial values
      // We assume client sends {isApproved: false, role: 'user', ...}
      allow create: if request.auth != null && request.auth.uid == userId;

      // Allow update: 
      // 1. Admin can update anything (e.g., approve users)
      // 2. User can update their own profile BUT NOT 'isApproved' or 'role' fields
      allow update: if request.auth != null && (
        isAdmin() || 
        (request.auth.uid == userId 
         && request.resource.data.isApproved == resource.data.isApproved 
         && request.resource.data.role == resource.data.role)
      );
    }

    // AppData Collection: Users access own data if approved, Admin accesses all
    match /appData/{userId}/{document=**} {
      allow read, write: if request.auth != null && (
        (request.auth.uid == userId && isApproved(userId)) || 
        isAdmin()
      );
    }
  }
}